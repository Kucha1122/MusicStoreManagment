@model LendViewModel
<div class="row orderForm">

    <form asp-controller="Lend" asp-action="LendAlbum" method="post" class="form-horizontal" role="form">
        <h3 class="col-md-offset-2">Wypożycz płytę</h3>
        @Html.HiddenFor(m => Model.Album.AlbumId)
        <div class="form-group">
            <label asp-for="Album.Borrower" class="col-md-2 control-label">Użytkownik</label>
            <div class="col-md-6">

                @Html.DropDownListFor(m => m.Album.BorrowerId,
                                             new SelectList(Model.Customers.Select(x => new { Value = x.CustomerId, Text = x.CustomerName }), "Value", "Text"),
                                             "Wybierz użytkownika",
                                             htmlAttributes: new { @class = "form-control border-input" })
            </div>
        </div>
        <div class="form-group">
            <div class="btn-group col-md-offset-2 col-md-6">
                <input class="btn btn-default" type="submit" value="Wróć" asp-controller="Lend" asp-action="List" />
                <input class="btn btn-success" type="submit" value="Wypożycz" />
            </div>
        </div>
    </form>
</div>