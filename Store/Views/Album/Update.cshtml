@model AlbumViewModel

<div class="row orderForm">
    <form asp-controller="Album" asp-action="Update" method="post" class="form-horizontal" role="form">
        <h3 class="col-md-offset-2">Edytuj album</h3>
        @Html.HiddenFor(m => Model.Album.AlbumId)

        <div class="form-group">
            <label asp-for="Album.Band" class="col-md-2 control-label">Zespół</label>
            <div class="col-md-6">
                @Html.DropDownListFor(m => m.Album.BandId,
                                       new SelectList(Model.Bands.Select(x => new { Value = x.BandId, Text = x.BandName }), "Value", "Text"), "Wybierz zespół",
                                       htmlAttributes: new { @class = "form-control border-input" })
                <span asp-validation-for="Album.Band" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Album.Title" class="col-md-2 control-label">Tytuł albumu</label>
            <div class="col-md-6">
                <input asp-for="Album.Title" class="form-control" placeholder="Wprowadź nazwę albumu" />
                <span asp-validation-for="Album.Title" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Album.AlbumArtUrl" class="col-md-2 control-label">Okładka</label>
            <div class="col-md-6">
                <input asp-for="Album.AlbumArtUrl" class="form-control" placeholder="Link do okładki" />
                <span asp-validation-for="Album.AlbumArtUrl" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="btn-group col-md-offset-2 col-md-6">
                <input class="btn btn-default" type="submit" value="Wróć" asp-controller="Album" asp-action="List" />
                <input class="btn btn-success" type="submit" value="Stwórz" />
            </div>
        </div>
    </form>
</div>