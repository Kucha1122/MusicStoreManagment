@{
    ViewData["Title"] = "Home Page";
}
@model HomeViewModel
@{
    int availableAlbums = Model.AlbumCount - Model.LendAlbumCount;
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="https://i.ytimg.com/vi/ggeYQHCNBiY/maxresdefault.jpg" alt="hard_rock" class="img-responsive" />
        </div>
        <div class="item">
            <img src="https://i.imgur.com/xh1yu0N.jpg" alt="love_music" class="img-responsive" />
        </div>
        <div class="item">
            <img src="https://i.imgur.com/52Nm7l8.jpg" alt="rock_love" class="img-responsive" />
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <h1>Panel zarządzający</h1>
    <div class="col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Ilość użytkowników
            </div>
            <div class="panel-body">
                <h3>@Model.CustomerCount</h3>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Ilość zespołów
            </div>
            <div class="panel-body">
                <h3>@Model.BandCount</h3>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Ilość płyt
            </div>
            <div class="panel-body">
                <h3>Dostępnych jest @availableAlbums płyt z @Model.AlbumCount</h3>
            </div>
        </div>
    </div>
</div>
